const depoimentos = [
  {
    nome: "Ana Silva",
    foto: "https://randomuser.me/api/portraits/women/12.jpg",
    texto: "Meu cachorro foi atendido com muito carinho e profissionalismo. O serviço de busca e entrega foi excelente, facilitou muito minha vida. Recomendo a todos!",
    pet: "Thor, Labrador"
  },
  {
    nome: "Carlos Oliveira",
    foto: "https://randomuser.me/api/portraits/men/32.jpg",
    texto: "Minha gata precisou de uma cirurgia de emergência e a equipe da Dr. Animal foi incrível. Atendimento 24 horas realmente funciona e salvou a vida da minha pet.",
    pet: "Luna, Persa"
  },
  {
    nome: "Mariana Costa",
    foto: "https://randomuser.me/api/portraits/women/45.jpg",
    texto: "Atendimento de excelência! Os veterinários são muito atenciosos e explicam tudo detalhadamente. As instalações são modernas e limpas. Meu pet sempre é bem tratado.",
    pet: "Simba, Golden Retriever"
  },
  {
    nome: "Roberto Santos",
    foto: "https://randomuser.me/api/portraits/men/67.jpg",
    texto: "Já passei por várias clínicas veterinárias, mas a Dr. Animal é sem dúvida a melhor. O atendimento domiciliar é um diferencial incrível para quem tem pets que ficam estressados com deslocamentos.",
    pet: "Nina, Shih Tzu"
  }
];
