---
const equipe = [
  {
    nome: "MV. Jean Fernandes",
    cargo: "Médico Veterinário",
    especialidade: "Clínica Geral e Cirurgia",
    foto: "/src/images/jean.jpg",
    descricao: "Formado pela Faculdade Latino Americana desde 2014, pós graduado em Ortopedia e Traumatologia",
    redes: {
      instagram: "https://instagram.com/jeanveterinario"
    }
  },
  {
    nome: "MV. Rafaela Bruna",
    cargo: "Veterinária",
    especialidade: "Clinica Geral",
    foto: "",
    descricao: " - ",
    redes: {      
      instagram: "https://instagram.com/doutoranimal"
    }
  },
  {
    nome: "MV. Fernando Barreto",
    cargo: "Veterinário",
    especialidade: "Clinica Geral",
    foto: "",
    descricao: " - ",
    redes: {
      linkedin: "https://linkedin.com",
      instagram: "https://instagram.com/doutoranimal"
    }
  },
  {
    nome: "MV. Ana Carolina",
    cargo: "Veterinária",
    especialidade: "Clinica Geral",
    foto: "",
    descricao: " - ",
    redes: {
      instagram: "https://instagram.com/doutoranimal"
    }
  }
];
---

<section id="equipe" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">Nossa Equipe</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Conheça os profissionais dedicados que cuidam do seu pet com amor e competência. Nossa equipe é formada por especialistas em diversas áreas da medicina veterinária.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {equipe.map((membro) => (
        <div class="bg-gray-50 rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow group">
          <div class="relative overflow-hidden">
            <img 
              src={membro.foto} 
              alt={`Foto de ${membro.nome}`} 
              loading="lazy"
              width="300"
              height="400"
              class="w-full h-64 object-cover object-center group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
              <h3 class="text-white font-bold text-xl">{membro.nome}</h3>
              <p class="text-primary font-medium">{membro.especialidade}</p>
            </div>
          </div>
          
          <div class="p-6">
            <p class="text-gray-500 mb-2">{membro.cargo}</p>
            <p class="text-gray-600 mb-4">{membro.descricao}</p>
            
            <div class="flex space-x-3">
              <a 
                href={membro.redes.linkedin} 
                target="_blank" 
                class="bg-blue-600 hover:bg-blue-700 text-white p-2 rounded-full transition-colors"
                aria-label={`LinkedIn de ${membro.nome}`}
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z" />
                </svg>
              </a>
              <a 
                href={membro.redes.instagram} 
                target="_blank" 
                class="bg-pink-600 hover:bg-pink-700 text-white p-2 rounded-full transition-colors"
                aria-label={`Instagram de ${membro.nome}`}
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <a href="#contato" class="bg-primary hover:bg-primary/90 text-white font-bold py-3 px-8 rounded-full transition-colors inline-flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Fale com o Veterinário
      </a>
    </div>
  </div>
</section>
