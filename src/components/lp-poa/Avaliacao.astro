<section id="avaliacao" class="py-10 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">Avalie Nosso Atendimento</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Sua opinião é muito importante para continuarmos melhorando nossos serviços. Compartilhe sua experiência na Dr. Animal.
      </p>
    </div>
    
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md p-8">
      <form id="avaliacaoForm" class="space-y-6">
        <div>
          <label for="nome" class="block text-gray-700 font-medium mb-2">Nome</label>
          <input 
            type="text" 
            id="nome" 
            name="nome" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            required
          />
        </div>
        
        <div>
          <label for="email" class="block text-gray-700 font-medium mb-2">E-mail</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            required
          />
        </div>
        
        <div>
          <label class="block text-gray-700 font-medium mb-2">Avaliação</label>
          <div class="flex items-center space-x-2">
            <div class="flex space-x-1">
              <input type="radio" id="star5" name="rating" value="5" class="hidden peer" required />
              <label for="star5" class="cursor-pointer text-3xl text-gray-300 peer-checked:text-yellow-400">★</label>
              
              <input type="radio" id="star4" name="rating" value="4" class="hidden peer" />
              <label for="star4" class="cursor-pointer text-3xl text-gray-300 peer-checked:text-yellow-400">★</label>
              
              <input type="radio" id="star3" name="rating" value="3" class="hidden peer" />
              <label for="star3" class="cursor-pointer text-3xl text-gray-300 peer-checked:text-yellow-400">★</label>
              
              <input type="radio" id="star2" name="rating" value="2" class="hidden peer" />
              <label for="star2" class="cursor-pointer text-3xl text-gray-300 peer-checked:text-yellow-400">★</label>
              
              <input type="radio" id="star1" name="rating" value="1" class="hidden peer" />
              <label for="star1" class="cursor-pointer text-3xl text-gray-300 peer-checked:text-yellow-400">★</label>
            </div>
          </div>
        </div>
        
        <div>
          <label for="servico" class="block text-gray-700 font-medium mb-2">Serviço Utilizado</label>
          <select 
            id="servico" 
            name="servico" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            required
          >
            <option value="" disabled selected>Selecione um serviço</option>
            <option value="consulta">Consulta Veterinária</option>
            <option value="vacina">Vacinação</option>
            <option value="cirurgia">Cirurgia</option>
            <option value="exames">Exames Laboratoriais</option>
            <option value="banho">Banho e Tosa</option>
            <option value="outro">Outro</option>
          </select>
        </div>
        
        <div>
          <label for="comentario" class="block text-gray-700 font-medium mb-2">Seu Comentário</label>
          <textarea 
            id="comentario" 
            name="comentario" 
            rows="4" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary resize-none"
            required
          ></textarea>
        </div>
        
        <div class="flex items-start">
          <input 
            type="checkbox" 
            id="permissao" 
            name="permissao" 
            class="mt-1 mr-2"
            required
          />
          <label for="permissao" class="text-gray-600 text-sm">
            Autorizo a publicação deste depoimento no site e redes sociais da Dr. Animal.
          </label>
        </div>
        
        <div class="text-center">
          <button 
            type="submit" 
            class="bg-primary hover:bg-primary/90 text-white font-bold py-3 px-8 rounded-full transition-colors inline-flex items-center"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Enviar Avaliação
          </button>
        </div>
      </form>
      
      <div id="successMessage" class="hidden mt-6 p-4 bg-green-100 text-green-700 rounded-lg">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <p class="font-medium">Obrigado por sua avaliação! Seu feedback é muito importante para nós.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('avaliacaoForm');
    const successMessage = document.getElementById('successMessage');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Aqui você pode adicionar código para enviar os dados para um servidor
        // Por enquanto, apenas simulamos o envio e mostramos a mensagem de sucesso
        
        // Simulação de envio (em um caso real, você enviaria para um endpoint)
        setTimeout(() => {
          form.reset();
          form.style.display = 'none';
          if (successMessage) {
            successMessage.classList.remove('hidden');
          }
          
          // Após 5 segundos, reexibimos o formulário para novas avaliações
          setTimeout(() => {
            form.style.display = 'block';
            if (successMessage) {
              successMessage.classList.add('hidden');
            }
          }, 5000);
        }, 1000);
      });
    }
    
    // Melhorar a experiência de seleção de estrelas
    const stars = document.querySelectorAll('input[name="rating"]');
    stars.forEach((star, index) => {
      star.addEventListener('change', () => {
        const labels = document.querySelectorAll('label[for^="star"]');
        const value = star.value;
        
        labels.forEach((label, i) => {
          if (i < value) {
            label.classList.add('text-yellow-400');
            label.classList.remove('text-gray-300');
          } else {
            label.classList.remove('text-yellow-400');
            label.classList.add('text-gray-300');
          }
        });
      });
    });
  });
</script>
